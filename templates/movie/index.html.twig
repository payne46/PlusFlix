{% extends 'base.html.twig' %}

{% block title %}PlusFlix – Twój katalog filmów online{% endblock %}

{% block body %}
    <h1>PlusFlix – Twój katalog filmów online</h1>
    </br>

    {% if searchResults is defined %}
        {% if searchResults is empty %}
            <p>Brak wyników wyszukiwania</p>        
            </br>
        {% else %}
            <h2>Wyniki wyszukiwania</h2>
            </br>
            <table border="1" cellpadding="8" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tytuł</th>
                        <th>Data produkcji</th>
                        <th>Kraj</th>
                        <th>Reżyser</th>
                    </tr>
                </thead>
                <tbody>
                    {% for movie in searchResults %}
                        <tr>
                            <td>
                                <a href="{{ path('movie_show', { id: movie.id }) }}">
                                    {{ movie.title }}
                                </a>
                            </td>
                            <td>
                                {# releaseDate jest DateTime? – formatujemy #}
                                {% if movie.releaseDate %}
                                    {{ movie.releaseDate|date('Y-m-d') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ movie.country ?? '-' }}</td>
                            <td>{{ movie.director ?? '-' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </br>
        {% endif %}
    {% endif %}

    {% if topMovies is empty %}
        <p>Brak najwyżej ocenianych filmów</p>
    {% else %}
        <h2>Najwyżej oceniane filmy</h2>
        </br>
        <table border="1" cellpadding="8" cellspacing="0">
            <thead>
                <tr>
                    <th>Tytuł</th>
                    <th>Data produkcji</th>
                    <th>Kraj</th>
                    <th>Reżyser</th>
                </tr>
            </thead>
            <tbody>
                {% for movie in topMovies %}
                    <tr>
                        <td>
                            <a href="{{ path('movie_show', { id: movie.id }) }}">
                                {{ movie.title }}
                            </a>
                        </td>
                        <td>
                            {# releaseDate jest DateTime? – formatujemy #}
                            {% if movie.releaseDate %}
                                {{ movie.releaseDate|date('Y-m-d') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{{ movie.country ?? '-' }}</td>
                        <td>{{ movie.director ?? '-' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    </br>

    {% if movies is empty %}
        <p>Brak filmów w bazie</p>
    {% else %}
        <h2>Wszystkie filmy</h2>
        </br>
        <table border="1" cellpadding="8" cellspacing="0">
            <thead>
                <tr>
                    <th>Tytuł</th>
                    <th>Data produkcji</th>
                    <th>Kraj</th>
                    <th>Reżyser</th>
                </tr>
            </thead>
            <tbody>
                {% for movie in movies %}
                    <tr>
                        <td>
                            <a href="{{ path('movie_show', { id: movie.id }) }}">
                                {{ movie.title }}
                            </a>
                        </td>
                        <td>
                            {# releaseDate jest DateTime? – formatujemy #}
                            {% if movie.releaseDate %}
                                {{ movie.releaseDate|date('Y-m-d') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{{ movie.country ?? '-' }}</td>
                        <td>{{ movie.director ?? '-' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    </br>
    
    {% if streamingPlatforms is empty %}
        <p>Brak danych o platformach streamingowych</p>
    {% else %}
        <h2>Platformy streamingowe</h2>
        </br>
        <table border="1" cellpadding="8" cellspacing="0">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Adres URL</th>
                    <th>Logo</th>
                </tr>
            </thead>
            <tbody>
                {% for platform in streamingPlatforms %}
                    <tr>
                        <td>{{ platform.name }}</td>
                        <td>{{ platform.websiteUrl ?? '-' }}</td>
                        <td>{{ platform.banner ?? '-' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
